<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rc="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gaosi"
        tools:context=".main.view.SongSheetActivityMusic">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="74dp"
            app:elevation="0dp">

            <RelativeLayout
                app:layout_scrollFlags="scroll|snap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <net.center.blurview.ShapeBlurView
                    android:id="@+id/blurview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:blur_radius="5dp"
                    app:blur_corner_radius="10dp"
                    app:blur_overlay_color="@color/purple_transparent"
                    />
                <com.lihang.ShadowLayout
                    android:id="@+id/mShadowLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hl_cornerRadius="27.5dp"
                    app:hl_shadowColor="#A9FA0000"
                    app:hl_shadowLimit="10dp"
                    >
                    <com.example.musicplayerdome.rewrite.RoundImageView
                        android:id="@+id/Suserimg"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@color/grey_white"
                        android:layout_centerHorizontal="true"
                        app:type="circle"/>
                </com.lihang.ShadowLayout>
                <RelativeLayout
                    android:id="@+id/rv_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mShadowLayout"
                    >
                    <TextView
                        android:id="@+id/Susername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="15dp"
                        android:textSize="20sp"
                        android:letterSpacing="0.05"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/user_vip"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/Susername"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="13sp"
                        android:text=""
                        android:background="@drawable/file_background_radius_10_black"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/user_grade"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_toRightOf="@id/user_vip"
                        android:background="@drawable/file_background_radius_10_gray"
                        android:letterSpacing="0.05"
                        android:textColor="#fff" />
                </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/Personal_page"
                       android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Props_columnS"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rv_userinfo"
                        android:orientation="horizontal"
                        android:gravity="center">
                    <LinearLayout
                        android:id="@+id/my_music"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/music_fill"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:text="我的音乐"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/radiostation"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:text="我的电台"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/download_while"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:text="下载记录"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/local_music"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/focussongs"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:text="本地音乐"/>
                    </LinearLayout>

                        <LinearLayout
                            android:id="@+id/M_collection"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/audio_collect_nomal_while"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textSize="13sp"
                                android:text="我的收藏"/>
                        </LinearLayout>

                    </LinearLayout>

                <net.center.blurview.ShapeBlurView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    app:blur_overlay_color="@color/purple_transparent"
                    app:blur_radius="5dp" />
            </RelativeLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="20dp"-->
<!--                android:layout_gravity="bottom"-->
<!--                android:background="@drawable/file_back_shape"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginRight="10dp"/>-->
            <net.center.blurview.ShapeBlurView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:blur_radius="5dp"
                app:blur_corner_radius="10dp"
                android:layout_marginBottom="10dp"
                app:blur_overlay_color="@color/purple_transparent"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/afc_10dp"
                    android:textColor="@color/white"
                    android:text="我的音乐"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/more_while"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/Song_Like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <com.android.liuzhuang.rcimageview.RoundCornerImageView
                        android:id="@+id/Song_Like_img"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        rc:rciv_radius="7dp"/>
                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/file_background_radius_15_black"
                            android:alpha="0.4"/>

                        <ImageView
                            android:id="@+id/Like_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shape_like_white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/Like_img"
                            android:textColor="#fff"
                            android:text="我喜欢的音乐"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Song_FM"
                    android:layout_toRightOf="@+id/Song_Like"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <com.android.liuzhuang.rcimageview.RoundCornerImageView
                        android:id="@+id/my_song_img"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        rc:rciv_radius="7dp"/>
                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/file_background_radius_15_black"
                            android:alpha="0.4"/>
                        <ImageView
                            android:id="@+id/fm_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/fm_log"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/fm_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/fm_img"
                            android:textColor="#fff"
                            android:text="私人FM"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="#D8D2D2"
                            android:text=""/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Song_More"
                    android:layout_toRightOf="@+id/Song_FM"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/file_background_radius_15_whiteash">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/file_background_radius_15_black"
                        android:alpha="0.4"/>
                    <ImageView
                        android:id="@+id/Song_More_img"
                        android:layout_centerInParent="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/more_and_more" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/Song_More_img"
                        android:layout_marginTop="10dp"
                        android:textColor="#707070"
                        android:text="更多"/>
                </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/afc_10dp"
                    android:textColor="@color/white"
                    android:text="最近播放"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/more_while"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recently_played_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/afc_10dp"
                    android:textColor="@color/white"
                    android:text="我的歌单"/>
                <ImageView
                    android:id="@+id/mine_playlist_more"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/more_while"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_playlist"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>